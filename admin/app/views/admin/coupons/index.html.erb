<div class="users col-md-12">
  <div class="row">
    <div class="col-md-6">
      <h1 class="pull-right">Listing coupons</h1>
    </div>
    <div class="col-md-6">
      <h1><%= link_to 'Generate coupon', admin_new_coupon_path, class: "btn btn-success" %></h1>
    </div>
  </div>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>id</th>
        <th>title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coupons.each do |coupon| %>
        <tr>
          <td><%= coupon["id"] %></td>
          <td><%= coupon["title"] %></td>
          <td><input type="text" name="fname"> <%= link_to 'Issue', coupon, class: "btn btn-primary" %><td>
          <td><%= link_to 'Show', admin_coupon_path(coupon["id"].to_i), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', admin_coupon_path(coupon["id"].to_i), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
