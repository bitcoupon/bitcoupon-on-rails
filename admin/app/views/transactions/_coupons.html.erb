<h2>Your coupons</h2>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Creator</th>
      <th>Title</th>
      <th>Issue</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= translate_address coupon['creatorAddress'] %></td>
        <td><%= coupon['payload'] %></td>
        <td><%= render 'issue_form', creator_address: coupon['creatorAddress'], payload: coupon['payload'] %></td>
        <td><%= render 'delete_form', creator_address: coupon['creatorAddress'], payload: coupon['payload'], private_key: 'create', submit_name: 'Delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
