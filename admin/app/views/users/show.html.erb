<div class="users">
  <div class="pull-right">
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
    <td><%= link_to 'Destroy', @user, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </div>
  <h2><%= @user.email %></h2>

  <dl class="dl-horizontal">
    <dt><strong>CREATE ADDRESS</strong></dt>
    <dd><%= translate_address @user.create_address %></dd>
    <dt><strong>RETURN ADDRESS</strong></dt>
    <dd><%= translate_address @user.return_address %></dd>
  </dl>
</div>
