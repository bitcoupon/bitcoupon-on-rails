<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-target">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "BitCoupon", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-target">
      <ul class="nav navbar-nav">
        <li><%= button_to 'COUPONS', coupons_path, class: 'btn btn-default navbar-btn', method: :get %></li>
      </ul>
      <% if current_user %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', user_path(current_user) %></li>
              <li><%= link_to 'All users', users_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <%= form_tag(signin_path, role: 'form', class: "navbar-form navbar-right") do %>
          <div class="form-group">
            <%= text_field_tag :email, '', placeholder: 'Email', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control' %>
          </div>
          <%= submit_tag 'Login', class: "btn btn-default" %>
        <% end %>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>